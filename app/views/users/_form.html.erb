<%= form_for(@user, html:{class:"form-horizontal"}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <div class= "alert alert-danger col-md-offset-2">
    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group ">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class:"btn btn-info" %>
      <%= link_to 'Cancel', users_path, class:"btn btn-default"%>
    </div>
  </div>


<% end %>